---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Yang Yu's personal website" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-background">
      <div class="geometric-wrapper">
        <div class="container">
          <Header />
          <main>
            <slot />
          </main>
          <Footer />
        </div>
      </div>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --color-primary: #d97706; /* warm orange */
    --color-secondary: #fffbf5; /* warm cream */
    --color-text: #333;
    --color-background: #f8f9fa; /* slightly cooler background */
    --color-content-bg: #fffbf5; /* warm cream for content */
    --color-text-muted: #666;
    --color-link: #1e40af; /* complementary blue */
    --color-link-hover: #1e3a8a; /* darker blue */
    --color-accent: #f97316; /* brighter orange accent */

    /* Complex gradient background - cool to warm directional flow */
    --gradient-complex-cool-warm: radial-gradient(
        circle at 20% 30%,
        rgba(30, 64, 175, 0.35) 0%,
        transparent 55%
      ),
      radial-gradient(
        circle at 80% 70%,
        rgba(249, 115, 22, 0.15) 0%,
        transparent 65%
      ),
      radial-gradient(
        circle at 60% 15%,
        rgba(168, 85, 247, 0.2) 0%,
        transparent 45%
      ),
      radial-gradient(
        circle at 25% 85%,
        rgba(34, 197, 94, 0.15) 0%,
        transparent 40%
      ),
      conic-gradient(
        from 45deg at 75% 25%,
        rgba(30, 64, 175, 0.12) 0deg,
        rgba(168, 85, 247, 0.1) 90deg,
        rgba(249, 115, 22, 0.08) 180deg,
        rgba(34, 197, 94, 0.1) 270deg,
        rgba(30, 64, 175, 0.12) 360deg
      ),
      linear-gradient(
        90deg,
        rgba(30, 41, 59, 0.95) 0%,
        rgba(51, 65, 85, 0.85) 40%,
        rgba(71, 85, 105, 0.75) 70%,
        rgba(217, 119, 6, 0.45) 100%
      );
  }

  body {
    font-family: Georgia, serif;
    line-height: 1.6;
    color: var(--color-text);
    background: var(--color-background);
    margin: 0;
    padding: 0;
  }

  .page-background {
    min-height: 100vh;
    background: var(--gradient-complex-cool-warm);
    padding: 0 20px 40px 20px;
  }

  .geometric-wrapper {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    background: 
      /* Subtle cool-to-warm gradient overlay */
      linear-gradient(
        90deg,
        rgba(59, 130, 246, 0.05) 0%,
        rgba(217, 119, 6, 0.05) 100%
      ),
      /* Original content background */
        linear-gradient(
          135deg,
          var(--color-content-bg) 0%,
          rgba(255, 251, 245, 0.98) 100%
        );
    box-shadow:
      0 0 0 1px rgba(255, 255, 255, 0.1),
      0 20px 40px rgba(0, 0, 0, 0.3),
      inset 0 1px 0 rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    overflow: hidden;
  }

  .container {
    max-width: 750px;
    margin: 0 auto;
    padding: 0 80px 40px 40px;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    position: relative;
  }

  main {
    flex: 1;
  }

  h1 {
    font-size: 24px;
    margin: 30px 0 20px 0;
    font-weight: normal;
    position: relative;
  }

  h1::after {
    content: "";
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--color-primary);
    border-radius: 2px;
  }

  h2 {
    font-size: 20px;
    margin: 25px 0 15px 0;
    font-weight: normal;
  }

  h3 {
    font-size: 18px;
    margin: 20px 0 10px 0;
    font-weight: normal;
  }

  p {
    margin: 0 0 15px 0;
  }

  a {
    color: var(--color-link);
    text-decoration: underline;
  }

  a:hover {
    color: var(--color-link-hover);
  }

  ul,
  ol {
    margin: 0 0 15px 0;
    padding-left: 30px;
  }

  li {
    margin-bottom: 5px;
  }

  blockquote {
    margin: 20px 0;
    padding: 20px;
    border-left: 4px solid var(--color-primary);
    background: rgba(217, 119, 6, 0.05);
    border-radius: 0 8px 8px 0;
    color: var(--color-text-muted);
    position: relative;
  }

  blockquote::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(
      180deg,
      var(--color-primary),
      var(--color-accent)
    );
  }

  code {
    color: var(--color-primary);
    padding: 2px 6px;
    font-size: 14px;
    border-radius: 4px;
    background: rgba(217, 119, 6, 0.1);
  }

  pre,
  .astro-code {
    background: rgba(217, 119, 6, 0.05) !important;
    border: 1px solid rgba(217, 119, 6, 0.15);
    border-left: 4px solid var(--color-primary);
    padding: 20px;
    overflow-x: auto;
    margin: 20px 0;
    border-radius: 8px;
    position: relative;
  }

  pre::before,
  .astro-code::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(
      180deg,
      var(--color-primary),
      var(--color-accent)
    );
  }

  pre code,
  .astro-code code {
    background: none !important;
    padding: 0;
    border-radius: 0;
  }

  .margin-date {
    position: absolute;
    right: 40px;
    color: var(--color-primary);
    font-size: 14px;
    font-weight: 500;
    font-style: italic;
    background: rgba(217, 119, 6, 0.1);
    padding: 4px 12px;
    border-radius: 20px;
    border: 1px solid rgba(217, 119, 6, 0.2);
  }

  /* Large screens - make content wider but preserve background visibility */
  @media (min-width: 1400px) {
    .geometric-wrapper {
      max-width: 1100px;
    }

    .container {
      max-width: 900px;
      padding: 0 100px 40px 60px;
    }
  }

  @media (min-width: 1600px) {
    .geometric-wrapper {
      max-width: 1300px;
    }

    .container {
      max-width: 1100px;
      padding: 0 120px 40px 80px;
    }
  }

  @media (max-width: 900px) {
    .page-background {
      padding: 0 10px 20px 10px;
    }

    .container {
      padding: 0 40px 30px 30px;
    }
  }

  @media (max-width: 800px) {
    .page-background {
      background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
      padding: 0;
    }

    .geometric-wrapper {
      max-width: none;
      background: var(--color-content-bg);
      border-radius: 0;
      box-shadow: none;
    }

    .container {
      padding: 0 30px 20px 30px;
      min-height: 100vh;
    }

    .margin-date {
      position: static;
      text-align: right;
      margin-top: 10px;
      display: inline-block;
    }
  }

  @media (max-width: 600px) {
    .page-background {
      background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
      padding: 0;
    }

    .geometric-wrapper {
      background: var(--color-content-bg);
      border-radius: 0;
      box-shadow: none;
    }

    .container {
      padding: 0 20px 20px 20px;
      min-height: 100vh;
    }

    .geometric-wrapper::after {
      width: 80px;
      height: 80px;
      top: -15px;
      right: -15px;
    }
  }
</style>
