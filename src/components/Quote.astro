---
export interface Props {
  author?: string;
  source?: string;
}

const { author, source } = Astro.props;
---

<div class="quote-container">
  <blockquote class="quote-text">
    <slot />
  </blockquote>
  {
    (author || source) && (
      <cite class="quote-attribution">
        {author && <span class="quote-author">{author}</span>}
        {source && <span class="quote-source">{source}</span>}
      </cite>
    )
  }
</div>

<style>
  .quote-container {
    margin: 30px 0;
    padding: 30px;
    background: #f5f5f5;
    border-radius: 8px;
    text-align: center;
    position: relative;
  }

  .quote-text {
    font-style: italic;
    font-size: 18px;
    line-height: 1.7;
    color: var(--color-text);
    margin: 0;
    padding: 0;
    border: none;
    background: none;
    position: relative;
  }

  .quote-attribution {
    display: block;
    margin-top: 20px;
    font-style: normal;
    font-size: 14px;
    color: var(--color-text-muted);
  }

  .quote-author {
    font-weight: 500;
  }

  .quote-source {
    font-style: italic;
  }

  .quote-author + .quote-source::before {
    content: ", ";
  }

  /* Responsive adjustments */
  @media (max-width: 600px) {
    .quote-container {
      margin: 20px 0;
      padding: 20px;
    }

    .quote-text {
      font-size: 16px;
      line-height: 1.6;
    }
  }
</style>
